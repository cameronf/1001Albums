<div id="w_print_and_filter" class="print_and_filter">
	<div id="print_wanted_text" class="print_wanted_text">
		<a href="/ltrs/downloadable_list" target="_blank">Create Downloadable List</a>
	</div>
  <div id="w_show_filter_text" class="show_filter_text">
    <a href="javascript:void(0)" onClick="$('#w_show_filter_text').hide();$('#w_hide_filter_text').show();$('#w_show_filter_controls').show();do_js_set_div_height('wanted_albums_scroll');">Advanced Filters</a>
  </div>
  <div id="w_hide_filter_text" class="w_hide_filter_text" style="display:none">
    <a href="javascript:void(0)" onClick="$('#w_show_filter_controls').hide();$('#w_show_filter_text').show();$('#w_hide_filter_text').hide();do_js_set_div_height('wanted_albums_scroll');">Hide Filters</a><br>
  </div>
</div>

<div id="w_show_filter_controls" class="show_filter_controls" style="display:none">
<div class="filter_sort">
Sort By:
  <select name="sort_by" id="sort_by_select" onChange="do_js_get_sorted_albums(this.value,'wanted_albums')">
    <option value="0" selected>Year</option>
		<option value="1">Artist</option>
    <option value="2">Rating</option>
  </select>
</div>

<div class="filter_wanted">
Want:
	<select name="wanted_type" id="wanted_type" onChange="do_js_get_wanted_albums(this.value,'wanted_albums')">
		<option value="owned" selected>To Buy</option>
		<option value="heard">To Hear</option>
	</select>
</div>

<div class="filter_by">
Filter By:
  <select name="filter_by" id="w_filter_by_select" onChange="do_js_populate_filters(this.value, 'wanted')" >
    <option value="0" selected>No Filter</option>
    <option value="1">Year</option>
    <option value="2">Artist</option>
  </select>
</div>

<div id="wanted_filter_details" class="filter_details">
</div>
<div id="wanted_filter_go" class="filter_go" style="display:none">
<input class="btn btn-mini btn-primary" type="button" value="Go" onClick="do_js_get_filtered_albums('wanted')"/>
</div>
</div>
